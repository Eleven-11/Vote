<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gameloft9.demo.dataaccess.dao.system.TpDemVerificationMapper">

    <resultMap id="BaseResultMap" type="com.gameloft9.demo.dataaccess.model.system.TpDemVerification">
        <id column="yid" property="yid" jdbcType="INTEGER"/>
        <result column="content" property="content" jdbcType="VARCHAR"/>
        <result column="recordId" property="recordId" jdbcType="INTEGER"/>
        <result column="isVote" property="isVote" jdbcType="VARCHAR"/>
        <result column="id" property="id" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">

        yid, content, recordId, isVote, id

    </sql>

    <insert id="addzh" parameterType="com.gameloft9.demo.dataaccess.model.system.TpDemVerification">
        insert into tp_democratic_verification (content, recordId, isVote, id)
        values (#{content}, #{recordId}, #{isVote}, #{id});
    </insert>

    <select id="findzh" parameterType="java.lang.Integer" resultType="com.gameloft9.demo.dataaccess.model.system.TpDemVerification">
        select
        content,isVote
        from tp_democratic_verification
        where
        recordId = #{recordId}
    </select>

    <update id="delzh" parameterType="java.lang.String">
        update tp_democratic_verification
        set
        isVote = 0
        where content = #{content}
    </update>

</mapper>
